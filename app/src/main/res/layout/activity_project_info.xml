<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectInfoActivity" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfe9ef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="프로젝트 정보"
                android:textSize="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="2dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/activity_project_info_img"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="@drawable/ic_launcher_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="2dp"
                android:background="#7c7c7c" />

            <TextView
                android:id="@+id/activity_project_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로젝트 이름"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="2dp"
                android:background="#7c7c7c" />

            <TextView
                android:id="@+id/activity_project_info_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#ebe9ff"
                android:text="자세한 정보>>"
                android:textColor="#514eff"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="serif" />

            <Button
                android:id="@+id/activity_project_info_regiser_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="관심프로젝트 등록" />

            <Button
                android:id="@+id/activity_project_info_matching_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="이 프로젝트의 매칭 리스트 보기"
                android:visibility="invisible"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>